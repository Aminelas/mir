<fieldset>
  {{#if title}}
    <legend>{{title}}</legend>
  {{/if}}

  {{components.login title=(t "routes.login.cta-login")
    components=(hash
      input=(component "mir-input"))
    errorMessageKeys=errorMessageKeys
    action=loginAction
    model=model}}

  {{components.input type="password" name="password_confirmation"
    autocorrect="off"
    autocomplete="off"
    errors=(v-get model "passwordConfirmation" "messages")
    minlength="12"
    required="required"
    label=(t "routes.login.password-confirm")
    value=model.passwordConfirmation}}

  <p>
    {{mir-errors-handler errorMessageKeys=errorMessageKeys}} 

    <button {{action action}} disabled={{model.validations.isInvalid}}>
      {{t "routes.login.cta-signup"}}
    </button>
  </p>
</fieldset>
